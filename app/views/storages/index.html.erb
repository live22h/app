<div data-closable class="notice callout alert-callout-subtle primary small success">
  <%= notice %>
  <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
    <span aria-hidden="true">⊗</span>
  </button>
</div>
<a href="<%= new_storage_path %>" class="button">Добавить терминал</a>
<div class="grid-x">
  <% @storages.each do |storage| %>
    <div class="cell small-12 medium-6"><%= storage.address %></div>
    <div class="cell small-4 medium-2"><%= link_to 'Показать', storage %></div>
    <div class="cell small-4 medium-2"><%= link_to 'Изменить', edit_storage_path(storage) %></div>
    <div class="cell small-4 medium-2"><%= link_to 'Удалить', storage, method: :delete, data: { confirm: 'Вы уверены?' } %></div>
  <% end %>
</div>
