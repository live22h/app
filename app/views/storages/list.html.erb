<ul>
  <% @storages.each do |storage| %>
    <li>
      <% branch = Branches.find(storage.branch_id) %>
      <h1><%= branch.name %></h1>
      <p></p>
      <%= link_to 'Подробнее', storage %>
    </li>
  <% end %>
</ul>

<table>
  <thead>
    <tr>
      <th>Branch</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @storages.each do |storage| %>
      <tr>
        <td><%= storage.branch_id %></td>
        <td><%= storage.address %></td>
        <td><%= storage.latitude %></td>
        <td><%= storage.longitude %></td>
        <td><%= link_to 'Show', storage %></td>
        <td><%= link_to 'Edit', edit_storage_path(storage) %></td>
        <td><%= link_to 'Destroy', storage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
